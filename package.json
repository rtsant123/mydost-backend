{
  "name": "mydost-backend",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build -w apps/api && npm run build -w apps/worker",
    "dev": "npm run dev -w apps/api",
    "dev:worker": "npm run dev -w apps/worker",
    "lint": "npm run lint -w apps/api && npm run lint -w apps/worker",
    "test": "npm run test -w apps/api",
    "prisma:generate": "npm run prisma:generate -w packages/db",
    "prisma:migrate": "npm run prisma:migrate -w packages/db"
  }
}
